index e97efae32c5e..b9ff5958532c 100644
--- a/llvm/lib/Support/MemoryBuffer.cpp
+++ b/llvm/lib/Support/MemoryBuffer.cpp
@@ -253,11 +253,10 @@ template <typename MB>
