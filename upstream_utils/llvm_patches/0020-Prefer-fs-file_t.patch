+++ b/llvm/include/llvm/Support/raw_ostream.h
@@ -23,15 +23,13 @@
 #include <string_view>
 #include <system_error>
 
-namespace llvm {
-
-namespace sys {
 namespace fs {
 enum FileAccess : unsigned;
 enum OpenFlags : unsigned;
