     if (FileSize == uint64_t(-1)) {
-      sys::fs::file_status Status;
-      std::error_code EC = sys::fs::status(FD, Status);
-      if (EC)
-        return EC;
+#ifdef _WIN32
+      // If this not a file or a block device (e.g. it's a named pipe
